Titanium.UI.setBackgroundColor('#000');


var mainWindow = Ti.UI.createWindow({
	title: "My Photos",
	backgroundColor: "#fff",
});


var galleryButton = Ti.UI.createView({
	top: 0,
	backgroundColor: "128dff",
	height: 120,
});


var openGalleryText = Ti.UI.createLabel({
	text: "Open Gallery",
	color: "#fff",
});

openGalleryButton.addEventListener("click", function(open){
	navWindow.openWindow(galleryView);
});

var navWindow = Ti.UI.iOS.createNavigationWindow({
	window: mainWindow,
});


mainWindow.add(galleryButton, openGalleryText);
navWindow.open();
