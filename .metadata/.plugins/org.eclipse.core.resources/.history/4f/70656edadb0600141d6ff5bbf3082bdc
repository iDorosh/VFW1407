Titanium.UI.setBackgroundColor('#000');

var mainWindow = Ti.UI.createWindow({
	title: "My First App",
	backgroundColor: "#fff",
});

var mainView = Ti.UI.createView({
	backgroundColor: "#333",
	borderRadius:2,
	borderWidth: 1,
	top: 50,
	left: 20,
	right : 20,
	bottom : 100
});


var behindMainView = Ti.UI.createView({
	backgroundColor: "#fef773",
	borderRadius:2,
	borderWidth: 1,
	borderColor: "#fef773",
	top: 60,
	left: 15,
	right : 15,
	bottom : 110
});


var previousButton = Ti.UI.createView({
	backgroundColor: "#fef773",
	borderRadius: 2,
	borderWidth: 1,
	width: 130,
	height: 50,
	left: 20,
	bottom: 25,
});

var nextButton = Ti.UI.createView({
	backgroundColor: "#fef773",
	borderRadius: 2,
	borderWidth: 1,
	width: 130,
	height: 50,
	right: 20,
	bottom: 25,
});

mainWindow.add(behindMainView, mainView, previousButton, nextButton);
mainWindow.open();
  