var mainWindow = Ti.UI.createWindow({
	backgroundColor: "#6c6c6c",
});

var titleView = Ti.UI.createView({
	backgroundColor:"#000",
	height: 55,
	top: 30,
});

var titleViewBackground = Ti.UI.createView({
	backgroundColor:"#ff0000",
	height: 60,
	width: 310,
	top: 27.5,
});

var titleLabel = Ti.UI.createLabel({
	text: "Types of Cars",
	font: {fontSize: 30, fontFamily: "AmericanTypewriter", fontWeight: "light"},
	color: "#fff",
});

var cars = Ti.UI.createTableView({
	top: titleViewBackground.height+ titleViewBackground.top + 15,
	width: 295,
	height: 450,
});

var carsBackground = Ti.UI.createView({
	backgroundColor:"#ff0000",
	height: 435,
	width: 300,
	top: titleViewBackground.height+ titleViewBackground.top + 22.5,
	
});





titleView.add(titleLabel);
mainWindow.add(titleViewBackground, titleView, carsBackground, cars);
mainWindow.open();
