	});
	answersResults.close({
		transition: Ti.UI.iPhone.AnimationStyle.FLIP_FROM_LEFT,
	});
	
	
});

againButton.addEventListener("click", function(){
	random();
	answersResults.close({
		transition: Ti.UI.iPhone.AnimationStyle.FLIP_FROM_LEFT,
	});
	answersSignsWindow.open;
	scoreLabel.text=0;
	
	
	
});




