Titanium.UI.setBackgroundColor('#000');

var mainWindow = Ti.UI.createWindow({
	title: "My First App",
	backgroundColor: "#fff",
});

var view = Ti.UI.createView({
	backgroundColor: "#333",
	borderRadius:2,
	borderWidth: 1,
	width: 100,
	height: 100,
	top: 20,
	left: 20,
	right : 20,
	bottom : 20
});

mainWindow.add(view);
mainWindow.open();
  